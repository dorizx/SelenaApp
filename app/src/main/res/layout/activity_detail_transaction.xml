<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ffffff"
    tools:context=".ui.transaction.detail.DetailTransactionActivity">

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/Amount"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/tv_transaction_ID_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_amount"
        android:text="ID Transaksi"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_transaction_ID_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_amount"
        android:layout_toEndOf="@+id/tv_transaction_ID_label"
        android:text="123456789"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_transaction_ID_label"
        android:text="Date"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_transaction_ID_label"
        android:layout_toEndOf="@+id/tv_date_label"
        android:text="2023-12-03"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date_label"
        android:text="status"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_status_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date_label"
        android:layout_toEndOf="@id/tv_status_label"
        android:text="completed"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/tv_notes_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status_label"
        android:text="Notes"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_notes_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status_label"
        android:layout_toEndOf="@id/tv_notes_label"
        android:text="Transaction details here"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete" />

        <Button
            android:id="@+id/btn_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</RelativeLayout>